# Development Dockerfile - pakai Air untuk hot reload
FROM golang:1.23-alpine

RUN apk add --no-cache git curl tzdata

# Install Air (hot reload tool untuk Go)
RUN go install github.com/air-verse/air@latest

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

# Air akan watch perubahan file dan auto restart
EXPOSE 8080

CMD ["air", "-c", ".air.toml"]